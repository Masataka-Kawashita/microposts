<h1>followers</h1>
<% @users.each do |user| %>
<div class="row">
    <section class="user_info">
      <h2>
        <%= gravatar_for user %>
        <%= link_to user.name,user_path(user.id) %>
       <p><%= user.region %></p>
       <P><%= user.profile %></P>
      </h2>
    </section>
</div>
<hr>
<% end %>